<!--Form to add new meal-->
@using (Html.BeginForm("CreateNew", "ManageMeals", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label"})
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "control-label"})
        @Html.DropDownListFor(m => m.Type,  new List<SelectListItem> 
        {
            new SelectListItem{Text="Breakfast", Value="Breakfast"},
            new SelectListItem{Text="Lunch", Value="Lunch"},
            new SelectListItem{Text="Dinner", Value="Dinner"}
        }, "-- Select Type --", new { @class = "form-control"}
        )
    </div>

    <div class="form-group">
        <input type="submit" value="submit" class="btn btn-primary" />
    </div>
}